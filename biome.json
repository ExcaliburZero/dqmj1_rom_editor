{
  "$schema": "https://biomejs.dev/schemas/2.4.0/schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 4,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "css": {
    "formatter": {
      "indentWidth": 2
    }
  },
  "json": {
    "formatter": {
      "indentWidth": 2
    }
  },
  "linter": {
    "rules": {
      "a11y": {
        "useGenericFontNames": "off"
      },
      "correctness": {
        "useParseIntRadix": "off"
      }
    }
  },
  "files": {
    "includes": ["**", "!src-tauri/target"]
  }
}
